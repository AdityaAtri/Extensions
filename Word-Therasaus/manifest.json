{
  "manifest_version": 2,

  "name": "Word Thesaurus",
  "description": "Keep your words online",
  "version": "1.0.3",
  "icons": {
    "128": "images/logo128.png",
    "48": "images/logo48.png",
    "16": "images/logo16.png"
  },

  "browser_action": {
    "default_icon": "images/logo128.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["event_page.js"],
    "persistent": false
  },

  "permissions": [
          "storage",
          "notifications",
          "contextMenus"
        ],
  "options_page": "options.html"
}
